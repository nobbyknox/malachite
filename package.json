{
    "name": "Malachite",
    "version": "0.0.1",
    "private": true,
    "dependencies": {
        "body-parser": "1.5.0",
        "bookshelf": "0.8.2",
        "bunyan": "1.5.1",
        "express": "4.13.3",
        "jshint": "2.8.0",
        "knex": "^0.8.6",
        "mocha": "2.3.2",
        "moment": "2.4.0",
        "nodemon": "1.7.3",
        "q": "1.4.1",
        "sqlite3": "^3.1.1",
        "sha1": "1.1.1"
    },
    "scripts": {
        "start": "MALACHITE_ENV=development ./node_modules/.bin/nodemon lib/server.js | ./node_modules/bunyan/bin/bunyan --color",
        "test": "MALACHITE_ENV=unittest ./node_modules/.bin/mocha -t 2000 --recursive -R spec test/ | ./node_modules/bunyan/bin/bunyan --color || true",
        "production": "MALACHITE_ENV=production node lib/server.js | ./node_modules/bunyan/bin/bunyan --color",
        "lint": "./node_modules/.bin/jshint lib test || true"
    }
}
